{
  "github.copilot.chat.search.semanticTextSearch": true,
  "github.copilot.editor.enableCodeActions": true,
  "github.copilot.editor.enableAutoCompletions": true,
  "chat.instructionsFilesLocations": {
    ".github/copilot-instructions.md": true
  },
  /* FORMATO .NET (C#) */
  "csharp.format.enableWithPropertyPatterns": true,
  "dotnet.completion.showCompletionItemsFromUnimportedNamespaces": true,
  "csharp.inlayHints.parameters.enabled": true,
  "csharp.inlayHints.types.enabled": true,
  /* FORMATO FRONTEND (TYPESCRIPT/NEXT.JS) */
  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.inlayHints.parameterNames.enabled": "all",
  "typescript.inlayHints.variableTypes.enabled": true,
  /* PRODUCTIVIDAD GENERAL */
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.organizeImports": "explicit"
  },
  "files.autoSave": "afterDelay",
  "editor.suggestSelection": "first",
  "editor.codeLens": true,
  /* AUTO-APROBACIÃ“N TERMINAL (AGILIDAD) */
  "terminal.integrated.suggest.enabled": true,
  "terminal.integrated.enableMultiLinePasteWarning": "never",
  "chat.tools.terminal.autoApprove": {
    "dotnet build": true,
    "dotnet run": true,
    "dotnet test": true,
    "dotnet ef": true,
    "dotnet restore": true,
    "dotnet clean": true,
    "npm run dev": true,
    "npm install": true,
    "npm run build": true,
    "git": true,
    "az": true,
    "sqlcmd": true,
    "Invoke-Sqlcmd": true
  }
}